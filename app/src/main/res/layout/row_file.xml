<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/folder"
        android:contentDescription="@string/file_type_icon" />

    <TextView
        android:id="@+id/text_file_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/image_file_type"
        app:layout_constraintTop_toTopOf="@id/image_file_type"
        app:layout_constraintBottom_toBottomOf="@id/image_file_type" />

</android.support.constraint.ConstraintLayout>